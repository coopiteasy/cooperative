<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="ch_iban_template" name="ch_iban_template">
        <div
            t-attf-class="form-group #{error and 'iban' in error and 'has-error' or ''}"
        >
            <label for="iban">
                Bank Account Number
            </label>
            <input
                type="text"
                class="form-control mandatory-field"
                name="iban"
                t-attf-value="#{iban or ''}"
                placeholder="CH48523080767127"
            />
        </div>
    </template>

    <template
        id="becomecooperator"
        inherit_id="easy_my_coop_website.becomecooperator"
        name="becomecooperator"
    >
        <xpath
            expr="//t[@t-call='easy_my_coop_website.contact_template']"
            position="after"
        >
            <t t-call="easy_my_coop_ch.ch_iban_template" />
        </xpath>
    </template>

    <template
        id="becomecompanycooperator"
        inherit_id="easy_my_coop_website.becomecompanycooperator"
        name="becomecompanycooperator"
    >
        <xpath expr="//div[@name='confirm_email_container']" position="after">
            <t t-call="easy_my_coop_ch.ch_iban_template" />
        </xpath>
    </template>

</odoo>
